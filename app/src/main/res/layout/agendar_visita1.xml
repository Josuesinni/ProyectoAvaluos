<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="599dp"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/tvAgenda"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="¡Agenda tu Visita!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/letraTitulo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/homeicon" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="@dimen/letraContenido"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:text="Información personal" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ems="8"
            android:hint="Nombre / Empresa"
            android:layout_marginBottom="@dimen/margenForm"
            android:layout_marginTop="@dimen/margenForm"
            android:inputType="text"
            android:text="" />

        <Spinner
            android:id="@+id/spr_tramite"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:entries="@array/tramites"
            android:layout_marginBottom="@dimen/margenForm"
            />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Número de contacto"
            android:layout_marginBottom="@dimen/margenForm"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:textSize="@dimen/letraContenido"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margenForm"
            android:text="Día preferido para la visita:" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margenForm"
            android:hint="DD/MM/AAAA"
            android:ems="10"
            android:inputType="date" />

        <Button
            android:id="@+id/btn_AgendaSiguiente"
            android:layout_width="196dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/black"
            android:layout_gravity="center"
            android:text="Siguiente >" />
    </LinearLayout>

</LinearLayout>