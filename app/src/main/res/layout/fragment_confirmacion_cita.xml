<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmacionCita"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/logo" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Confirmación de Cita"
            android:textAlignment="center"
            android:textSize="@dimen/letraTitulo"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/confirmacion_cita"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Gracias por usar HomeCheck!"
            android:textAlignment="center"
            android:textSize="@dimen/letraContenido"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="En breve un asesor se contactará para acordar la hora de la visita."
            android:textSize="@dimen/letraContenido"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/margenCentrado"
            android:layout_marginRight="@dimen/margenCentrado"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/btnInicioAgenda"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Regresar a Inicio"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            />
    </LinearLayout>
</FrameLayout>