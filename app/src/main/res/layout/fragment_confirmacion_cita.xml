<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmacionCita"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:textAlignment="center"
                app:icon="@drawable/back"
                app:iconSize="24dp"
                app:iconTint="@color/black" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="70dp"
                android:layout_weight="0"
                android:src="@drawable/logo" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmación de Cita"
            android:textAlignment="center"
            android:textSize="@dimen/letraTitulo"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Folio: #000000"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/letraContenido"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/confirmacion_cita"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Gracias por usar HomeCheck!"
            android:textAlignment="center"
            android:textSize="@dimen/letraContenido"
            android:textStyle="italic"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="En breve un asesor se contactará para acordar la hora de la visita."
            android:textSize="@dimen/letraContenido"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/margenCentrado"
            android:layout_marginRight="@dimen/margenCentrado"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El día de la cita se deberán tener todos los documentos requeridos."
            android:textSize="@dimen/letraContenido"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/margenCentrado"
            android:layout_marginRight="@dimen/margenCentrado"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="¿Qué documentos tengo que tener a la mano?"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAlignment="center"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="214dp"
            android:layout_marginRight="@dimen/margenCentrado"
            android:textColor="@color/colorLink"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Regresar a Inicio"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            />
    </LinearLayout>
</FrameLayout>