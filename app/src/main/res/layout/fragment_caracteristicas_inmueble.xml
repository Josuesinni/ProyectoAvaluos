<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CaracteristicasInmueble">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRegresoRegistroAcabados"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:textAlignment="center"
            app:icon="@drawable/back"
            app:iconSize="24dp"
            app:iconTint="@color/black" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="70dp"
            android:layout_weight="0"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Folio: "
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvFolioCaracteristicasInmuble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AV001"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:text="Características del Inmueble" />

        <Button
            android:id="@+id/btnSala"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/roboto"
            android:text="Sala"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            app:icon="@drawable/sala"
            app:iconSize="24dp"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/btnComedor"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/roboto"
            android:text="Comedor"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            app:icon="@drawable/comedor"
            app:iconSize="24dp"

            app:iconTint="@color/white" />

        <Button
            android:id="@+id/btnCocina"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/roboto"
            android:text="Cocina"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            app:icon="@drawable/cocina"
            app:iconSize="24dp"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/btnBanio"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/roboto"
            android:text="Baño"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            app:icon="@drawable/bathroom"
            app:iconSize="24dp"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/btnRecamara"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/roboto"
            android:text="Recamara"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            app:icon="@drawable/recamara"
            app:iconSize="24dp"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/btnEstancia"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/roboto"
            android:text="Estancia"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            app:icon="@drawable/estancia"
            app:iconSize="24dp"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/btnPosterior"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/roboto"
            android:text="Patio Posterior"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            app:icon="@drawable/patio_posterior"
            app:iconSize="24dp"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/btnEstacionamiento"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/roboto"
            android:text="Estacionamiento"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            app:icon="@drawable/estacionamiento"
            app:iconSize="24dp"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/btnTerraza"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/roboto"
            android:text="Terraza"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            app:icon="@drawable/terraza"
            app:iconSize="24dp"
            app:iconTint="@color/white" />
    </LinearLayout>

</LinearLayout>