<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_bg"
    android:orientation="vertical"
    tools:context=".informacion">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="espacio para lo de arriba" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:text="Información"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/letraTitulo"
        android:textStyle="bold" />

    <TextView
        android:layout_width="335dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:background="@color/white"
        android:text="HomeCheck es la herramienta que necesitabas para ayudar a valuar tu casa. Considera todas las opciones y características con tan solo un click.  ¡Empieza ahora! "
        android:textAlignment="center"
        android:textSize="@dimen/letraContenido" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:text="CONTÁCTANOS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="20dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/Instagram_icon"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="/@homecheck.mx"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="@dimen/letraContenido"
            android:background="@color/white"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:layout_width="20dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook_icon"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Home Check México"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="@dimen/letraContenido"
            android:background="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:layout_width="20dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/website_icon"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="www.homecheck.mx"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="@dimen/letraContenido"
            android:background="@color/white"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:text="SOPORTE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:layout_width="20dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/call_icon"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="55-123-45678"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="@dimen/letraContenido"
            android:background="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:layout_width="20dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/mail_icon"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="homecheck@soporte.com"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="@dimen/letraContenido"
            android:background="@color/white"
            />
    </LinearLayout>

</LinearLayout>