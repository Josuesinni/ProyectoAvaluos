<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroAvaluos">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView6_av"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="¡Registra un nuevo avalúo!"
        android:textSize="27.1sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5_av"
        android:layout_width="94.6dp"
        android:layout_height="94.6dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/add_avaluos" />

    <TextView
        android:id="@+id/textView7_av"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/roboto"
        android:gravity="fill_horizontal|end"
        android:text="Para comenzar con un nuevo avalúo es necesario tomar en cuenta las características de tu inmueble. En la parte inferior podrás identificarlas de manera fácil y rápida. "
        android:textSize="14.7sp" />

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="380dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvFolio_av"
            android:layout_width="180dp"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Folio"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/folio1_av"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/roboto"
            android:text="@string/folio"
            android:textColor="@color/green"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCaracInm"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="78dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/roboto"
        android:text="Características del Inmueble"
        android:textSize="19.5sp" />

    <Button
        android:id="@+id/btnCaracEnt"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="78dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/roboto"
        android:text="Características del Entorno"
        android:textSize="19.5sp" />

</FrameLayout>