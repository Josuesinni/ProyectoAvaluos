<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroAvaluos"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRegresarAcabados"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:textAlignment="center"
            app:icon="@drawable/back"
            app:iconSize="24dp"
            app:iconTint="@color/black" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="70dp"
            android:layout_weight="0"
            android:src="@drawable/logo" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView6_av"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto"
        android:textAlignment="center"
        android:text="¡Registra un nuevo avalúo!"
        android:textSize="@dimen/letraTitulo"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imageView5_av"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/add_avaluos"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView7_av"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/roboto"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:text="Para comenzar con un nuevo avalúo es necesario tomar en cuenta las características de tu inmueble. En la parte inferior podrás identificarlas de manera fácil y rápida. "
        android:textSize="@dimen/letraContenido" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">+
        <TextView
            android:id="@+id/tvFolio_av"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Folio"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/folio1_av"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/folio"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCaracInm"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/roboto"
        android:text="Características del Inmueble"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnCaracEnt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/roboto"
        android:text="Características del Entorno"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>

</LinearLayout>

</LinearLayout>