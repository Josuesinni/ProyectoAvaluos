<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Citas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_weight="0"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Mis Citas"
        android:textColor="@color/black"
        android:textSize="@dimen/letraTitulo"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/lista_avaluos" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tvNombreCita"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Nombre"
            android:textColor="@color/black"
            android:textSize="@dimen/letraContenido"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvFechaCita"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Fecha"
            android:textColor="@color/black"
            android:textSize="@dimen/letraContenido"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvEstatusCita"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Estatus"
            android:textColor="@color/black"
            android:textSize="@dimen/letraContenido"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvAccionesCita"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Acciones"
            android:textColor="@color/black"
            android:textSize="@dimen/letraContenido"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/listaCitas"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="6dp" />

    <Button
        android:id="@+id/btnNewCita"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:text="Nueva cita >"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>